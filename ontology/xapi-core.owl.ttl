# =============================================================================
# INTERACTION TYPES
# =============================================================================

:InteractionType rdf:type owl:Class ;
    rdfs:label "Interaction Type"@en ;
    rdfs:comment "Type of interaction for an Activity."@en ;
    rdfs:isDefinedBy <https://w3id.org/xapi/ontology> .

:TrueFalse rdf:type :InteractionType ;
    rdfs:label "true-false"@en .

:Choice rdf:type :InteractionType ;
    rdfs:label "choice"@en .

:FillIn rdf:type :InteractionType ;
